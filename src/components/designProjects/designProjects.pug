include ../sectionTitle/sectionTitle
include ../card/card
include ../additionalDescription/additionalDescription

mixin designProjects(projects)
  section.design-projects
    .design-projects__inner
      .design-projects__title
        +sectionTitle({text: 'design project', theme: 'black', icon: 'measures'})
      .design-projects__description
        +additionalDescription('Design project not only helps to make the repair of your apartment more modern, but also significantly reduces the cost of materials and reduces the time of repair work.')
      .design-projects__cards
        each project in projects
          .design-projects__card
            +card(project.title, project.image, `${project.costPerMeter} rub / m2`, project.options)
