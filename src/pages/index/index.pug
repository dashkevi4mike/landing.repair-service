block main
  .index
    +preview()
    +modal('request-call')
      +requestCallForm()
    .index__completed-projects
      .index__background.index__background_color_black
      .index__background-lines.index__background-lines_color_white
      .index__background-city
      +completedProjects(data.projects)
    .index__online-control
      .index__background-lines.index__background-lines_color_black
      +onlineControl()
      +typesOfRepair(data.typesOfRepair)
    .index__about-measurement  
      +aboutMeasurement()
    .index__gallery 
      +gallery(data.styles)
    .index__design-projects
      .index__design-projects-margin
        .index__background.index__background_color_black
        .index__background-lines.index__background-lines_color_white
      +designProjects(data.designProjects)
    .index__team
      +team(data.members)
    .index__clients
      +ourClients(data.clients)