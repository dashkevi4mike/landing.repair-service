include ./base-data
block variables

include ../../components/layout/layout
include ../../components/header/header


doctype html
html
  head
    meta(charset = 'utf-8')
    meta(name='viewport', content="initial-scale=1.0, width=device-width")
    title
      block title
  body
    +layout()
      +layout__header()
        +layout__container({basis: 1200, align: 'center'})
          block header
            +header({menuItems: locals.menuItems, tel: '+7 (928) 768-32-39', position: 'top'})
      +layout__main()
          block main
      +layout__footer()
        +layout__container({basis: 1200, align: 'center'})
          block footer
            +header({menuItems: locals.menuItems, tel: '+7 (928) 768-32-39', position: 'bottom'})
    block scripts